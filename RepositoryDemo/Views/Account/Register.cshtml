@model RepositoryDemo.Dtos.RegisterDto

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"/>
    <meta name="description" content=""/>
    <meta name="author" content=""/>
    <title>Register</title>
    <link href="css/styles.css" rel="stylesheet"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
</head>
<body class="bg-primary">
<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-7">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header">
                                <h3 class="text-center font-weight-light my-4">Create Account</h3>
                            </div>
                            <div class="card-body">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <form method="post">
                                    <div class="form-row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="small mb-1" asp-for="FullName"></label>
                                                <input value="javid dadashov" class="form-control py-4" asp-for="FullName" placeholder="Enter first name"/>
                                                <span class="text-danger" asp-validation-for="FullName"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="small mb-1" asp-for="UserName"></label>
                                                <input value="javid" class="form-control py-4" asp-for="UserName" placeholder="Username"/>
                                                <span class="text-danger" asp-validation-for="UserName"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="small mb-1" asp-for="Email"></label>
                                        <input value="javidfd@code.edu.az" class="form-control py-4" asp-for="Email" placeholder="Enter email address"/>
                                        <span class="text-danger" asp-validation-for="Email"></span>
                                    </div>
                                    <div class="form-row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="small mb-1" asp-for="Password"></label>
                                                <input value="Hh@123456" class="form-control py-4" asp-for="Password" placeholder="Enter password"/>
                                                <span class="text-danger" asp-validation-for="Password"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="small mb-1" asp-for="ConfirmPassword"></label>
                                                <input value="Hh@123456" class="form-control py-4" asp-for="ConfirmPassword" placeholder="Confirm Password"/>
                                                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                            </div>
                                        </div>

                                    </div>
                                    
                                    
                                    @* <div class="text-center mt-4 font-weight-light"> *@
                                    @* Don't have an account? <a asp-action="Register" class="text-primary">Create</a> *@
                                    @* </div> *@
                                    
                                    
                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-primary btn-lg">Register</button>
                                    </div>
                                </form>
                            </div>
                            <div class="card-footer text-center">
                                <div class="small">
                                    <a asp-action="Login">Have an account? Go to login</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="js/scripts.js"></script>
</body>
</html>