@model List<RepositoryDemo.Entity.Category>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}


<h3>Category List</h3>

<div class="row">
    <div class="col-12">
        <a class="btn btn-info" asp-action="Create">Add</a>
        <table class="table table-dark mt-2">
            <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Tools</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>

                        <td>
                            <a asp-action="Update" asp-route-id="@item.Id">Update</a>
                            <a asp-action="Delete" asp-route-id="@item.Id">Remove</a>
                        </td>

                    </tr>
                }

            </tr>
            </tbody>
        </table>
    </div>
</div>