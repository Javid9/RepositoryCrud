@using Microsoft.AspNetCore.Mvc.TagHelpers
@model RepositoryDemo.Entity.Product

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="col-12">
                    <a asp-action="Index" class="btn btn-dark mr-2 create-book">Go to Back</a>
                </div>

                <div class="card-body">
                    <h4 class="card-title">Product Detail</h4>
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    CategoryName
                                </th>
                                <th>
                                    Prices
                                </th>
                                <th>
                                    Quantity
                                </th>
                            </tr>
                            </thead>

                            <tbody>
                            <tr>
                            <td>
                                <img src="~/image/@Model.Image" style="width:100px;height:100px"/>
                            </td>
                            <td>
                                @Model.Name
                            </td>
                            <td>
                                @Model.Category.Name
                            </td>
                            <td>
                                @Model.Price
                            </td>
                            <td>
                                @Model.Quantity
                            </td>
                            </tbody>

                        </table>
                        <a asp-controller="Order" asp-action="UserInfo" asp-route-productId="@Model.Id" class="btn btn-dark mr-2 create-book">Order</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>