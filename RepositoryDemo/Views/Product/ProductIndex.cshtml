@model List<RepositoryDemo.Entity.Product>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}



<div class="container">
   
    <div class="row justify-content">
         @foreach (var item in Model)
         {
             <div class="card col col-lg-3 mt-5">
                 <img src="~/image/@item.Image"/>
                 <div class="card-body">
                     <h5 class="card-title">@item.Name</h5>
                     <p class="card-text">@item.Title</p>
                    <h6 class="card-title">$@item.Price.ToString("F")</h6>
                 </div>
                 <div class="card-body">
                     <a asp-action="ProductDetail" asp-route-id="@item.Id" class="card-link">Detail</a>
                 </div>
             </div>
         }
    </div>
</div>


