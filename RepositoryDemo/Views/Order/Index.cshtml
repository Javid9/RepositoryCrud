@model List<RepositoryDemo.Entity.Order>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h3>Order List</h3>
<a class="btn btn-dark mt-2" asp-controller="Product" asp-action="Index"> Go Back</a>
<div class="row">
    <table class="table table-dark table-hover mt-2">
        <thead>
        <tr>
            <th scope="col">Image</th>
            <th scope="col">User Name</th>
            <th scope="col">Product Name</th>
            <th scope="col">CategoryName</th>
            <th scope="col">Prices</th>
            <th scope="col">Date</th>
        </tr>
        </thead>
        <tbody>
        
        @foreach (var order in Model)
        {
            @foreach (var item in order.ProductOrders)
            {
                <tr>
                    <td>
                        <img src="~/image/@item.Product.Image" style="width:100px;height:100px"/>
                    </td>
                    <td>@order.FullName</td>
                    <td>@item.Product.Name</td>
                    <td>@item.Product.Category.Name</td>
                    <td>@item.Product.Price.ToString("F")</td>
                    <td>@order.OrderDate</td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>