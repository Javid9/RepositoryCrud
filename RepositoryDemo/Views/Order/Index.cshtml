@model List<RepositoryDemo.Entity.Order>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}


<div class="row">
    @* <a class="btn btn-info mt-2" asp-action="Add"> Create Product</a> *@
    <table class="table table-dark table-hover mt-2">
        <thead>
        <tr>
            <th scope="col">Image</th>
            <th scope="col">User Name</th>
            <th scope="col">Product Name</th>
            <th scope="col">CategoryName</th>
            <th scope="col">Prices</th>
            <th scope="col">Date</th>
            <th scope="col">Update</th>
            <th scope="col">Delete</th>
        </tr>
        </thead>
        <tbody>

        @foreach (var order in Model)
        {
            @foreach (var item in order.ProductOrders)
            {
                <tr>
                    <td>
                        <img src="~/image/@item.Product.Image" style="width:100px;height:100px"/>
                    </td>
                    <td>@order.User.FullName</td>
                    <td>@item.Product.Name</td>
                    <td>@item.Product.Category.Name</td>
                    <td>@item.Product.Price.ToString("F")</td>
                    <td>@order.OrderDate</td>
                    <td>
                        @* <a class="btn-outline-primary" asp-action="Add" asp-route-id="@item.Id"> *@
                        @*     Update *@
                        @* </a> *@
                    </td>
                    <td>
                        @* <a class="btn-outline-danger" asp-action="DeleteCategory" asp-route-id="@item.Id"> *@
                        @*     Delete *@
                        @* </a> *@
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>